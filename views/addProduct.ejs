<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <%- include('./partials/head') %>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <form action="/admin/prodetail" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Name</label>
                <input type="text" class="form-control" name="Pname"  id="Pname">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Price</label>
                <input  type="number" name="Pprice" id="Pprice" class="form-control" >
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Discrption</label>
                <input type="text" name="Pdiscripton" id="Pdiscripton"  class="form-control">
              </div>
              <div class="mb-3">
                <label for="coverImage" class="form-label">Product Image</label>
                <input type="file" name="Pimg" id="Pimg" class="form-control">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Detail</label>
                <input type="text" name="Pdetail" id="detail"  class="form-control">
              </div>
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Product Code</label>
                <input type="Pcode" name="Pcode" id="Pcode"  class="form-control">
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form> 
    </div>
   
    
    <%- include('./partials/script') %>
</body>
</html>